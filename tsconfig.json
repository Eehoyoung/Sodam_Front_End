{
  "extends": "@react-native/typescript-config",
  "compilerOptions": {
    "noEmit": true,
    "lib": ["dom", "es2017", "es2015", "esnext"],
    "types": ["node", "react-native"]
  },
  "include": [
    "src/**/*",
    "App.tsx"
  ],
  "exclude": [
    "**/__tests__/**",
    "android",
    "ios",
    "out",
    "node_modules",
    "**/*.test.ts",
    "**/*.test.tsx",
    "**/*.spec.ts",
    "**/*.spec.tsx"
  ]
}
